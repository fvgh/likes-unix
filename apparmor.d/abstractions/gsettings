# Read/Write  configuration stored in dconf backend via gsettings library.

#include <abstractions/dconf>

# Access to gsettings-desktop-schemas
/usr/{local/,}share/glib-[0-9]*/schemas/{,**}   r,

# Deny writing explicitly in your local configuration if required.
owner /run/user/[0-9]*/dconf/user rw,
